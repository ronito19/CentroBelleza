<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="5dp"
    app:cardBackgroundColor="@color/teal_700">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:backgroundTint="@color/teal_200"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_rv_cita_cita"
            android:layout_width="148dp"
            android:layout_height="215dp"
            android:layout_weight="1"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/cita" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/txt_rv_cita_correo"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="CORREO:"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txt_rv_cita_nombre"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="NOMBRE:"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txt_rv_cita_apellidos"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="APELLIDOS:"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txt_rv_cita_tratamiento"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="TRATAMIENTO:"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txt_rv_cita_dia"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="DIA:"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txt_rv_cita_hora"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="HORA:"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold|italic" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>